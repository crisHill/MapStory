<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="2000"
        android:hint="input dot num"
        android:background="@color/teal_700"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/data"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/data"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="data"
        android:background="@color/purple_200"
        app:layout_constraintLeft_toRightOf="@id/et"
        app:layout_constraintRight_toLeftOf="@id/second"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/second"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="second"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toRightOf="@id/data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.zls.mapstory.widght.CommonMap
        android:id="@+id/cris_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et" />

</androidx.constraintlayout.widget.ConstraintLayout>